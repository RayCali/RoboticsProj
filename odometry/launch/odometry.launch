<?xml version="1.0"?>
<launch>
	<!-- <param name="/use_sim_time" value="true" /> -->

	<!-- run rviz -->
	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find odometry)/launch/config/boot_camp_part2.rviz" />

	<param name="robot_description" command="$(find xacro)/xacro --inorder '$(find realsense2_description)/urdf/test_d435_camera.urdf.xacro' use_nominal_extrinsics:=false"/>
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

	<node name="sf_odometry" pkg="odometry" type="sf_odometry.py" output = "screen"/>
	<node name="odom" pkg="tf2_ros" type="static_transform_publisher" args="0 0 0 0 0 0 map odom" output ="screen" />
	<node name="center_robot" pkg="tf2_ros" type="static_transform_publisher" args="-0.18 0 0 0 0 0 base_link center_robot" output ="screen" />

	<!-- <node name="marker_1" pkg="tf2_ros" type="static_transform_publisher" args="-1 -1 0.18 0 0 0 map aruco/marker1" />
	<node name="marker_2" pkg="tf2_ros" type="static_transform_publisher" args="2 0 0.18 3.14159265359 0 0 map aruco/marker2" /> -->

	<node ns= "aruco_all" name="aruco" pkg="aruco_ros" type="marker_publisher">
		<remap from="/camera_info" to="/camera/color/camera_info"/>
		<remap from="/image" to="/camera/color/image_raw"/>
		
		<param name="image_is_rectified" value="True"/>
		<!-- <param name="marker_size"        value="0.157"/>  -->
		<param name="marker_size"        value="0.06"/> 
		<param name="reference_frame"    value="camera_link"/>  
		<param name="camera_frame"       value="camera_color_optical_frame"/>
	</node>
	<node ns="aruco_500" name="aruco" pkg="aruco_ros" type="marker_publisher">
		<remap from="/camera_info" to="/camera/color/camera_info"/>
		<remap from="/image" to="/camera/color/image_raw"/>
		<param name="image_is_rectified" value="True"/>
		<param name="marker_size"        value="0.08"/> 
		<param name="reference_frame"    value="camera_link"/>  
		<param name="camera_frame"       value="camera_color_optical_frame"/>
	</node>
</launch>
